{% extends "base.html.twig" %}

{% block title %}New Team &raquo; {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Register a new team</h1>
        {% include 'includes/messages.html.twig' %}
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.event) }}

        <button type="submit" class="btn btn-primary">Save</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
