<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no">
        <title>{% block title %}Team Registration System{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-expand-md navbar-dark bg-primary">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        {% if app.user %}
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link " href="{{ path('team_list') }}">Your Teams</a>
                            </li>
                        </ul>
                        <div class="title-bar__user">
                            Welcome, <span id="current-user">{{ app.user.email }}</span>.
                            <a href="{{ path('user_logout') }}" class="logout-link">Log out</a>
                        </div>
                        {% else %}
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                    <a class="nav-link " href="{{ path('user_login') }}">Log in</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " href="{{ path('user_register') }}">Register</a>
                                </li>
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </nav>
        {% endblock %}

        {% block header %}
            <div class="header d-flex">
                <div class="container d-flex">
                    <h1 class="mt-auto mb-auto">{% block header_h1 %}{% endblock %}</h1>
                    {% block header_btn %}{% endblock %}
                </div>
            </div>
        {% endblock %}

        <div class="container">
            {% block breadcrumb %}{% endblock %}
            {% block messages %}
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
        <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
