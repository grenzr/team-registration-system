{% extends "_simple_form.html.twig" %}

{% block title %}Update "{{ hike.name }}" &raquo; {{ parent() }}{% endblock %}

{% block header_h1 %}Update "{{ hike.name }}"{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('event_list') }}">Events</a></li>
            <li class="breadcrumb-item"><a href="{{ path('event_show', {'event_id': hike.event.id}) }}">{{ hike.event }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Update "{{ hike }}"</li>
        </ol>
    </nav>
{% endblock %}

{% block form %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.minWalkers) }}
    {{ form_row(form.maxWalkers) }}
    {{ form_row(form.minAge) }}
    {{ form_row(form.maxAge) }}
    {{ form_row(form.feePerWalker) }}
    {{ form_row(form.startTimeInterval) }}
    {{ form_row(form.firstTeamStartTime) }}

    <button type="submit" class="btn btn-primary btn-raised">Save</button>
    {{ form_end(form) }}
{% endblock %}
