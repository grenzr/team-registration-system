{% extends "_simple_form.html.twig" %}

{% block title %}Update Your Account &raquo; {{ parent() }}{% endblock %}

{% block header_h1 %}Update Your Account{% endblock %}

{% block form %}
    {{ form_start(form) }}
    {{ form_row(form.fullName) }}
    {{ form_row(form.contactNumber) }}
    {{ form_row(form.email) }}

    <button type="submit" class="btn btn-primary btn-raised mb-4">Update</button>

    <div>Want to update your password? Click <a href="{{ path('user_forgotten_password') }}">here</a> to request a password reset</div>
    {{ form_end(form) }}
{% endblock %}
