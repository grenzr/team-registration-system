{% extends "base.html.twig" %}

{% block title %}New Team &raquo; {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Register a new team</h1>
        {% include 'includes/messages.html.twig' %}
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.hike) }}

                        <button type="submit" class="btn btn-primary btn-raised">Save</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
